{{ 'section-hosen-collection-header.css' | asset_url | stylesheet_tag }}

<div class="hosen-collection-header color-{{ section.settings.color_scheme }}" style="--padding-top: {{ section.settings.padding_top }}px; --padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="hosen-collection-header__container page-width">

    <!-- Title -->
    <h1 class="hosen-collection-header__title {{ section.settings.heading_size }}">
      {%- if section.settings.use_collection_title -%}
        {{ collection.title | escape }}
      {%- else -%}
        {{ section.settings.heading }}
      {%- endif -%}
    </h1>

    <!-- Description -->
    {%- if section.settings.show_collection_description and collection.description != blank -%}
      <div class="hosen-collection-header__description rte">{{ collection.description }}</div>
    {%- endif -%}

    <!-- Tags -->
    {%- if section.settings.show_collection_tags and collection.all_tags.size > 0 -%}
      <div class="hosen-collection-header__tags">
        {%- for tag in collection.all_tags limit: section.settings.max_tags -%}
          <a href="{{ collection.url }}/{{ tag | handle }}" class="hosen-collection-header__tag {% if current_tags contains tag %}hosen-collection-header__tag--active{% endif %}">
            {{ tag }}
          </a>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <!-- Link -->
    {% if section.settings.link_label != blank %}
      <a href="{{ section.settings.link_url }}" class="hosen-collection-header__link">
        <span class="hosen-collection-header__link-text">{{ section.settings.link_label }}</span>
        <span class="hosen-collection-header__link-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </span>
      </a>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Hosen Collection Header",
  "tag": "section",
  "class": "section-hosen-collection-header",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_collection_title",
      "default": true,
      "label": "Użyj tytułu kolekcji",
      "info": "Jeśli włączone, wyświetli dynamiczny tytuł kolekcji"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Tytuł (gdy nie używasz tytułu kolekcji)",
      "default": "WSZYSTKIE PRODUKTY"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h3",
          "label": "Mały"
        },
        {
          "value": "h2",
          "label": "Średni"
        },
        {
          "value": "h1",
          "label": "Duży"
        },
        {
          "value": "h0",
          "label": "Bardzo duży"
        }
      ],
      "default": "h0",
      "label": "Rozmiar tytułu"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": false,
      "label": "Pokaż opis kolekcji"
    },
    {
      "type": "checkbox",
      "id": "show_collection_tags",
      "default": true,
      "label": "Pokaż tagi kolekcji"
    },
    {
      "type": "range",
      "id": "max_tags",
      "min": 3,
      "max": 20,
      "step": 1,
      "default": 10,
      "label": "Maksymalna liczba tagów"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Tekst linku"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "URL linku"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Schemat kolorów",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Górny padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Dolny padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Hosen Collection Header"
    }
  ]
}
{% endschema %}
