{{ 'section-hosen-compare.css' | asset_url | stylesheet_tag }}

<div class="hosen-compare color-{{ section.settings.color_scheme }}">
  <div class="hosen-compare__container page-width">
    <div class="hosen-compare__grid">
      
      <!-- Image Comparison Slider -->
      <div class="hosen-compare__slider" data-compare-slider>
        <div class="hosen-compare__slider-wrapper">
          <div class="hosen-compare__image hosen-compare__image--before">
            {% if section.settings.image_before != blank %}
              <img 
                src="{{ section.settings.image_before | image_url: width: 800 }}"
                srcset="{{ section.settings.image_before | image_url: width: 400 }} 400w,
                        {{ section.settings.image_before | image_url: width: 600 }} 600w,
                        {{ section.settings.image_before | image_url: width: 800 }} 800w"
                sizes="(min-width: 990px) 50vw, 100vw"
                alt="{{ section.settings.image_before.alt | default: 'Before image' }}"
                loading="lazy"
                class="hosen-compare__img"
                width="{{ section.settings.image_before.width }}"
                height="{{ section.settings.image_before.height }}"
              >
            {% else %}
              <div class="hosen-compare__placeholder">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>
          
          <div class="hosen-compare__image hosen-compare__image--after">
            {% if section.settings.image_after != blank %}
              <img 
                src="{{ section.settings.image_after | image_url: width: 800 }}"
                srcset="{{ section.settings.image_after | image_url: width: 400 }} 400w,
                        {{ section.settings.image_after | image_url: width: 600 }} 600w,
                        {{ section.settings.image_after | image_url: width: 800 }} 800w"
                sizes="(min-width: 990px) 50vw, 100vw"
                alt="{{ section.settings.image_after.alt | default: 'After image' }}"
                loading="lazy"
                class="hosen-compare__img"
                width="{{ section.settings.image_after.width }}"
                height="{{ section.settings.image_after.height }}"
              >
            {% else %}
              <div class="hosen-compare__placeholder">
                {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>
          
          <div class="hosen-compare__slider-handle" data-compare-handle>
            <div class="hosen-compare__slider-line"></div>
            <div class="hosen-compare__slider-button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <line x1="8" y1="6" x2="8" y2="18"></line>
                <line x1="16" y1="6" x2="16" y2="18"></line>
              </svg>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Product Card -->
      <div class="hosen-compare__product">
        {% assign product = section.settings.product %}
        {% if product != blank %}
          <a href="{{ product.url }}" class="hosen-compare__card">
            <div class="hosen-compare__product-image-wrapper">
              {% if product.featured_image != blank %}
                <img 
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  srcset="{{ product.featured_image | image_url: width: 400 }} 400w,
                          {{ product.featured_image | image_url: width: 600 }} 600w,
                          {{ product.featured_image | image_url: width: 800 }} 800w"
                  sizes="(min-width: 990px) 50vw, 100vw"
                  alt="{{ product.featured_image.alt | default: product.title }}"
                  loading="lazy"
                  class="hosen-compare__product-image hosen-compare__product-image--primary"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
                {% if product.images[1] != blank %}
                  <img 
                    src="{{ product.images[1] | image_url: width: 800 }}"
                    srcset="{{ product.images[1] | image_url: width: 400 }} 400w,
                            {{ product.images[1] | image_url: width: 600 }} 600w,
                            {{ product.images[1] | image_url: width: 800 }} 800w"
                    sizes="(min-width: 990px) 50vw, 100vw"
                    alt="{{ product.images[1].alt | default: product.title }}"
                    loading="lazy"
                    class="hosen-compare__product-image hosen-compare__product-image--secondary"
                    width="{{ product.images[1].width }}"
                    height="{{ product.images[1].height }}"
                  >
                {% endif %}
              {% else %}
                <div class="hosen-compare__placeholder">
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
              
              <div class="hosen-compare__quick-view">
                <span class="hosen-compare__quick-view-text">QUICK VIEW</span>
                <span class="hosen-compare__quick-view-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="7" y1="17" x2="17" y2="7"></line>
                    <polyline points="7 7 17 7 17 17"></polyline>
                  </svg>
                </span>
              </div>
            </div>
            
            <div class="hosen-compare__product-info">
              {% if product.vendor != blank and section.settings.show_vendor %}
                <span class="hosen-compare__vendor">{{ product.vendor }}</span>
              {% endif %}
              
              <h3 class="hosen-compare__title">{{ product.title }}</h3>
              
              <div class="hosen-compare__price">
                {% if product.compare_at_price > product.price %}
                  <span class="hosen-compare__price--sale">{{ product.price | money }}</span>
                  <span class="hosen-compare__price--compare">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="hosen-compare__price--regular">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </div>
          </a>
        {% else %}
          <div class="hosen-compare__card hosen-compare__card--placeholder">
            <div class="hosen-compare__product-image-wrapper">
              <div class="hosen-compare__placeholder">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            </div>
            <div class="hosen-compare__product-info">
              <span class="hosen-compare__vendor">Brand name</span>
              <h3 class="hosen-compare__title">Product title</h3>
              <div class="hosen-compare__price">
                <span class="hosen-compare__price--regular">0,00 zł</span>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
      
    </div>
  </div>
</div>

<script src="{{ 'hosen-compare.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Hosen Compare",
  "tag": "section",
  "class": "section-hosen-compare",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Suwak porównania"
    },
    {
      "type": "image_picker",
      "id": "image_before",
      "label": "Zdjęcie pierwsze (lewe)"
    },
    {
      "type": "image_picker",
      "id": "image_after",
      "label": "Zdjęcie drugie (prawe)"
    },
    {
      "type": "range",
      "id": "slider_start",
      "min": 10,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Pozycja początkowa suwaka",
      "default": 50
    },
    {
      "type": "header",
      "content": "Produkt"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Wybierz produkt"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Pokaż producenta",
      "default": true
    },
    {
      "type": "header",
      "content": "Ustawienia sekcji"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Schemat kolorów",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Górny padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Dolny padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Padding boczny"
    },
    {
      "type": "range",
      "id": "container_padding_mobile",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Padding boczny (mobile)",
      "default": 30
    },
    {
      "type": "range",
      "id": "container_padding_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding boczny (desktop)",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Hosen Compare"
    }
  ]
}
{% endschema %}

{% style %}
  .section-hosen-compare {
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --slider-start: {{ section.settings.slider_start }}%;
    --section-container-padding-mobile: {{ section.settings.container_padding_mobile }}px;
    --section-container-padding-desktop: {{ section.settings.container_padding_desktop }}px;
  }
{% endstyle %}
