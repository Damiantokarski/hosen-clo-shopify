{{ 'section-hosen-instagram.css' | asset_url | stylesheet_tag }}

<div class="hosen-instagram color-{{ section.settings.color_scheme }}" style="--padding-top: {{ section.settings.padding_top }}px; --padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="hosen-instagram__container page-width">   
    <!-- Images Grid -->
    <div class="hosen-instagram__grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.image_link | default: section.settings.link_url }}" class="hosen-instagram__item" target="_blank" rel="noopener" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 600 }}"
              srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                      {{ block.settings.image | image_url: width: 450 }} 450w,
                      {{ block.settings.image | image_url: width: 600 }} 600w"
              sizes="(min-width: 990px) 25vw, 50vw"
              alt="{{ block.settings.image.alt | default: 'Instagram image' }}"
              loading="lazy"
              class="hosen-instagram__image"
            >
          {% else %}
            <div class="hosen-instagram__placeholder">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
          <div class="hosen-instagram__overlay">
            <svg class="hosen-instagram__overlay-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
        </a>
      {% endfor %}
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "Hosen Instagram",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "STAY IN TOUCH"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "GIVE US A FOLLOW @BERLIN"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" },
        { "value": "h0", "label": "Extra Large" }
      ],
      "default": "h1"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link label",
      "default": "GET INSPIRED WITH @BERLIN"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Instagram URL"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Padding boczny"
    },
    {
      "type": "range",
      "id": "container_padding_mobile",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Padding boczny (mobile)",
      "default": 30
    },
    {
      "type": "range",
      "id": "container_padding_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding boczny (desktop)",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Image link (optional)",
          "info": "Leave empty to use main Instagram URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hosen Instagram",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .hosen-instagram {
    --section-container-padding-mobile: {{ section.settings.container_padding_mobile }}px;
    --section-container-padding-desktop: {{ section.settings.container_padding_desktop }}px;
  }
{% endstyle %}
