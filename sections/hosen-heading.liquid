{{ 'section-hosen-heading.css' | asset_url | stylesheet_tag }}

<div class="hosen-heading color-{{ section.settings.color_scheme }}">
  <div class="hosen-heading__container page-width">
    <div class="hosen-heading__content">
      <div class="hosen-heading__text">
        {% if section.settings.subheading != blank %}
          <span class="hosen-heading__subheading">{{ section.settings.subheading }}</span>
        {% endif %}
        
        {% if section.settings.heading != blank %}
          <h2 class="hosen-heading__title {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
      
      {% if section.settings.link_label != blank %}
        <a href="{{ section.settings.link_url }}" class="hosen-heading__link">
          <span class="hosen-heading__link-text">{{ section.settings.link_label }}</span>
          <span class="hosen-heading__link-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hosen Heading",
  "tag": "section",
  "class": "section-hosen-heading",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Podtytuł",
      "default": "BEST SELLERS"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Tytuł",
      "default": "MOST WANTED PIECES"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h3",
          "label": "Mały"
        },
        {
          "value": "h2",
          "label": "Średni"
        },
        {
          "value": "h1",
          "label": "Duży"
        },
        {
          "value": "h0",
          "label": "Bardzo duży"
        }
      ],
      "default": "h1",
      "label": "Rozmiar tytułu"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Tekst linku",
      "default": "SHOP BEST SELLERS"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "URL linku"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Schemat kolorów",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Górny padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Dolny padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Hosen Heading"
    }
  ]
}
{% endschema %}

{% style %}
  .section-hosen-heading {
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{% endstyle %}
