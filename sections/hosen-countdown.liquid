{{ 'section-hosen-countdown.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hosen-countdown.js' | asset_url }}" defer="defer"></script>

<div class="hosen-countdown color-{{ section.settings.color_scheme }}" style="--padding-top: {{ section.settings.padding_top }}px; --padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% if section.settings.background_image != blank %}
    <div class="hosen-countdown__background">
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        srcset="{{ section.settings.background_image | image_url: width: 750 }} 750w,
                {{ section.settings.background_image | image_url: width: 1100 }} 1100w,
                {{ section.settings.background_image | image_url: width: 1500 }} 1500w,
                {{ section.settings.background_image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.background_image.alt | default: section.settings.heading }}"
        loading="lazy"
        class="hosen-countdown__background-image"
      >
      <div class="hosen-countdown__overlay" style="--overlay-opacity: {{ section.settings.overlay_opacity }}%;"></div>
    </div>
  {% endif %}
  
  <div class="hosen-countdown__container page-width">
    <div class="hosen-countdown__content">
      {% if section.settings.heading != blank %}
        <h2 class="hosen-countdown__title {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      {% endif %}
      
      <div class="hosen-countdown__timer" data-countdown-date="{{ section.settings.countdown_date }}">
        <div class="hosen-countdown__item">
          <span class="hosen-countdown__number" data-days>00</span>
          <span class="hosen-countdown__label">{{ section.settings.days_label }}</span>
        </div>
        <div class="hosen-countdown__separator"></div>
        <div class="hosen-countdown__item">
          <span class="hosen-countdown__number" data-hours>00</span>
          <span class="hosen-countdown__label">{{ section.settings.hours_label }}</span>
        </div>
        <div class="hosen-countdown__separator"></div>
        <div class="hosen-countdown__item">
          <span class="hosen-countdown__number" data-minutes>00</span>
          <span class="hosen-countdown__label">{{ section.settings.minutes_label }}</span>
        </div>
        <div class="hosen-countdown__separator"></div>
        <div class="hosen-countdown__item">
          <span class="hosen-countdown__number" data-seconds>00</span>
          <span class="hosen-countdown__label">{{ section.settings.seconds_label }}</span>
        </div>
      </div>
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="hosen-button">
          <span>{{ section.settings.button_label }}</span>
          <span class="hosen-button__icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hosen Countdown",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "MID-SEASON SALE"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" },
        { "value": "h0", "label": "Extra Large" }
      ],
      "default": "h1"
    },
    {
      "type": "header",
      "content": "Countdown settings"
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown end date",
      "info": "Format: YYYY-MM-DD HH:MM (e.g. 2026-02-01 00:00)",
      "default": "2026-02-01 00:00"
    },
    {
      "type": "text",
      "id": "days_label",
      "label": "Days label",
      "default": "Days"
    },
    {
      "type": "text",
      "id": "hours_label",
      "label": "Hours label",
      "default": "Hours"
    },
    {
      "type": "text",
      "id": "minutes_label",
      "label": "Minutes label",
      "default": "Minutes"
    },
    {
      "type": "text",
      "id": "seconds_label",
      "label": "Seconds label",
      "default": "Seconds"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SHOP SALE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Padding boczny"
    },
    {
      "type": "range",
      "id": "container_padding_mobile",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Padding boczny (mobile)",
      "default": 30
    },
    {
      "type": "range",
      "id": "container_padding_desktop",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding boczny (desktop)",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Hosen Countdown"
    }
  ]
}
{% endschema %}

{% style %}
  .hosen-countdown {
    --section-container-padding-mobile: {{ section.settings.container_padding_mobile }}px;
    --section-container-padding-desktop: {{ section.settings.container_padding_desktop }}px;
  }
{% endstyle %}
